    System.out.println("Detalhes da sessão: " + "\n" + "Capacidade: " + this.getCapacidade() + "\n" + "Horário da sessão: " + this.getHorário() + "\n" + "Valor do ingresso: " + this.getValorIngresso() + "\n" + "Número da sessão: " + this.getNumeroSessao());
    }
